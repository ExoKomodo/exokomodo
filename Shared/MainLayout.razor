@using ExoKomodo.Config;

@inherits LayoutComponentBase

<div id="app">
    <div hidden="@(AppState.IsSideNavHidden)" class="sidenav">
        <NavMenu />
    </div>

    <div class="main">
        <div id="hide-sidenav-banner" class="top-row px-4">
            <div style="float: right;">
                <input id="hide-sidenav" type="checkbox" @bind="AppState.IsSideNavHidden" />
                <label for="hide-sidenav">Hide nav?</label>
            </div>
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>