@page "/users/jorson/blogs"
@using Client.Pages.Users.Jorson.Components

<link href="css/jorson/styles.css" rel="stylesheet" />

@if (_blogs is not null)
{
    <div id="body">
        <BackLink Link="/users/jorson" PageName="home" />
        <h1>Blogs</h1>
        <div>
            <ul>
                @foreach (var (blog, index) in _blogs.Select((item, index) => (item, index)))
                {
                    <li>
                        <h3>
                            <a href="@($"/users/jorson/blogs/{index}")">
                                @blog.Date.ToShortDateString() - @((MarkupString)blog.Title)
                            </a>
                        </h3>
                    </li>
                }
            </ul>
        </div>
    </div>
}