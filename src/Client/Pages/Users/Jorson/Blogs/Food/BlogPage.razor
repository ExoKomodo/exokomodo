@page "/users/jorson/food/{Id}"
@using Client.Pages.Users.Jorson.Components
@using Client.Helpers.Browser

<link href="css/jorson/styles.css" rel="stylesheet" />
@if (_blog is not null)
{
    <div id="body">
        <BackLink Link="/users/jorson/food" PageName="food" />
        <h1>@_blog.Title</h1>
        <div>
            <div id="anchors">
                <span>
                    <a @onclick='(() => Dom.ScrollIntoView(_jsRuntime, "links"))'
                       href="javascript:void(0)"
                    >
                        Links
                    </a>
                </span>
                <span>|</span>
                <span>
                    <a @onclick='(() => Dom.ScrollIntoView(_jsRuntime, "ingredients"))'
                       href="javascript:void(0)"
                    >
                        Ingredients
                    </a>
                </span>
                <span>|</span>
                <span>
                    <a @onclick='(() => Dom.ScrollIntoView(_jsRuntime, "directions"))'
                    href="javascript:void(0)"
                    >
                        Directions
                    </a>
                </span>
            </div>

            @((MarkupString)_blog.Content.Text)
            <img src="img/jorson/james-logo.svg" height="100px">
        </div>
    </div>
}
