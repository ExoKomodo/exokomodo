@page "/<user id>/<blog name>/{Id:int}"
@using Client.Pages.Webring.Jorson.Components

@if (_blog is not null)
{
    <div id="body">
        <BackLink Link="/<user id>/<blog name>" PageName="<blog name>" />
        <h1>@_blog.Title</h1>
        <div>
            @((MarkupString)_blog.Content.Text)
        </div>
    </div>
}
